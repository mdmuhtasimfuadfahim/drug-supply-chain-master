<%- include('../_layouts/header.ejs') %>
<%- include('../toast.ejs') %>

<section >
    <div class="container mx-auto pt-12">
        <div class="flex items-center justify-between mb-10">
            <h1 class="font-bold text-lg">Completed Orders of Pharmacist</h1>
            <a href="/api/drug/depot/orders"><h6 class="bg-white py-1 rounded-full px-4 text-green-700 text-l">Back to Order Page</h6></a>
        </div>
     <section class="transactionTable">
        <table class="customerT mx-auto table-auto">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-center">Image</th>
                    <th class="px-4 py-2 text-center">Orders</th>
                    <th class="px-4 py-2 text-center">Name</th>
                    <th class="px-4 py-2 text-center">Contact</th>
                    <th class="px-4 py-2 text-center">Email</th>
                    <th class="px-4 py-2 text-center">Address</th>
                    <th class="px-4 py-2 text-center">Status</th>
                    <th class="px-4 py-2 text-center">DAR</th>
                    <th class="px-4 py-2 text-center">Placed Date</th>
                    <th class="px-4 py-2 text-center">Placed Time</th>
                    <th class="px-4 py-2 text-center">Payment Status</th>
                </tr>
            </thead>
            <% if(orders.length) { %>
                <% orders.forEach((order)=>{ %>
                  <% if(user._id.equals(order.senderId._id)) { %>
            <tbody id="myCompletedOrderTable"></tbody>
                  <% } %>
                <% }) %>
            <% } else { %>
              
                  <tr>
                      <td>No orders for you.. Sorry !</td>
                  </tr>
             
          <% } %>
        </table>
     </section>
        
    </div>

</section>

<script src="/socket.io/socket.io.js"></script>
