<%- include('../_layouts/header.ejs') %>
<%- include('../toast.ejs') %>

<section class="register flex justify-center pt-50">
    <div class="w-max">
        <form action="/register" method="POST" class="shadow-md rounded px-8 pt-6 pb-8 mb-4" enctype="multipart/form-data">
          <% if(messages.error){ %>
          <span class="text-red-500 text-sm"><%= messages.error %></span> 
          <% } else{ %>
            <span class="text-green-500 text-sm"><%= messages.success %></span> 
          <% } %>
          <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="userimage">
                  Image
                </label>
                <input 
                name="image" type="file" value=""
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="userimage" placeholder="">
              </div>
             <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                  Name
                </label>
                <input 
                name="name" value="<%= messages.name %>"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Enter name">
              </div>
            <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
              Email
            </label>
            <input 
            name="email" value="<%= messages.email %>"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="email" placeholder="Enter email">
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="usernumber">
              Contact Number
            </label>
            <input 
            name="phone" value="<%= messages.phone %>"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="phone" placeholder="Enter contact">
          </div>
          <div class="mb-4">
            <label for="userrole" class="block text-gray-700 text-sm font-bold mb-2">Role</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="role" value="Depot In-Charge" >
                <label for="radio-2" class="radio-label w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline">Depot In-charge</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="role" value="Pharmacist" >
                <label for="radio-3" class="radio-label w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline">Pharmacist</label>
            </div>
           </div>
          <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="address">
              Address
            </label>
            <input 
            name = "address" value="<%= messages.address %>"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="address" type="address" placeholder="address">
          </div>

           <div class="flex items-center justify-between">
            <button
             class="read-btn focus:outline-none focus:shadow-outline" type="submit">
             Register
            </button>
            <a class="inline-block align-baseline font-bold text-sm" href="/login">
             Already have account?
            </a>
          </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
          &copy;Secure Drug Supply Chain. All rights reserved by @Muhtasim.
        </p>
      </div>

</section>

<script src="js/app.js" type="text/javascript" charset="utf-8"></script>