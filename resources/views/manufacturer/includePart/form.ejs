 <!-- form handling -->
 <form action="/api/drug/manufacturer/users" id="add_user" class="py-4" method="POST">
    <% if(messages.error){ %>
    <span class="ml-10 text-red-500 text-sm"><%= messages.error %></span> 
    <% } %>

    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="<%= messages.name %>" placeholder="Muhtasim Fuad Fahim">
        </div>
        <div class="form-group">
            <label for="Image" class="text-light">Image</label>
            <input type="file" name="image" value="<%= messages.image %>" placeholder="filename">
        </div>
        <div class="form-group">
            <label for="username" class="text-light">Email</label>
            <input type="text" name="email" value="<%= messages.email %>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="Conatct" class="text-light">Contact</label>
            <input type="text" name="phone" value="<%= messages.number %>" placeholder="016********">
        </div>
        <div class="form-group">
            <label for="role" class="text-light">Role</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="role" value="Depot In-charge" >
                <label for="radio-2" class="radio-label">Depot In-charge</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="role" value="Pharmacist" >
                <label for="radio-3" class="radio-label">Pharmacist</label>
            </div>
        </div>

        <div class="form-group">
            <label for="address" class="text-light">Address</label>
            <input type="text" name="address" value="<%= messages.address %>" placeholder="Mirpur 2, Dhaka">
        </div>

        <div class="form-group">
            <label for="private_key" class="text-light">Private Key</label>
            <input type="text" name="private_key" value="<%= messages.private_key %>" placeholder="*************">
        </div>

        <div class="form-group">
            <label for="public_key" class="text-light">Public Key</label>
            <input type="text" name="public_key" value="<%= messages.public_key %>" placeholder="*************">
        </div>
        <div class="form-group">
            <label for="accountAddress" class="text-light">Account</label>
            <input type="text" name="accountAddress" value="<%= messages.accountAddress %>" placeholder="0x*******">
        </div>


        <div class="form-group">
            <button type="submit" class="btn update">Save</button>
        </div>

    </div>
</form>

